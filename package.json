{
  "name": "zoa-cli",
  "version": "0.0.4-beta",
  "description": "Comment Line Utility for ZOA Extension",
  "author": "Zalo Platform",
  "license": "MIT",
  "bin": {
    "zoa": "./dist/cli.js",
    "zoa-cli": "./dist/cli.js"
  },
  "keywords": [
    "zoa",
    "zoa-cli"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "clean": "rimraf ./dist/ ./exec/",
    "build": "npm run clean && tsup ./src/cli.ts --format esm --dts",
    "test": "npm run build && ava --verbose",
    "bundle": "npm run build && pkg . --out-dir ./exec/"
  },
  "main": "./dist/cli.js",
  "type": "module",
  "dependencies": {
    "@rollup/plugin-dynamic-import-vars": "^2.1.2",
    "@rollup/plugin-replace": "^5.0.5",
    "axios": "^1.6.8",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "envfile": "^7.1.0",
    "exec-sh": "^0.4.0",
    "figlet": "^1.7.0",
    "file-api": "^0.10.4",
    "form-data": "^4.0.0",
    "inquirer": "^9.2.20",
    "lodash": "^4.17.21",
    "log-symbols": "^6.0.0",
    "normalize-path": "^3.0.0",
    "ora": "^8.0.1",
    "proxy-agent": "^6.4.0",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "vite": "^5.2.11",
    "zip-local": "^0.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.11",
    "ava": "^6.1.3",
    "pkg": "^4.4.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
